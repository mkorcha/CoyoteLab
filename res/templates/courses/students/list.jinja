{% if get_flashed_messages() %}
<div class="alert">{{ get_flashed_messages()[0] }}</div>
{% endif %}

<h1>{{ course.name }}</h1>

{% if course.students|count %}
<ul>
{% for student in course.students %}
	<li>{{ student.name }} <a href="{{ url_for('instructor.toggle_enrollment', course_id=course.id, user_id=student.id) }}">{{ "Drop" if student.active_in(course) else "Re-add" }}</a> <a href="{{ url_for('workspace.workspace', course_id=course.id, student_id=student.id) }}">Workspace</a></li>
{% endfor %}
{% else %}
No students found!
{% endif %}

<a href="{{ url_for('instructor.add_student', course_id=course.id) }}">Add Student</a>
<a href="{{ url_for('instructor.add_many_students', course_id=course.id) }}">Add Students From File</a>
